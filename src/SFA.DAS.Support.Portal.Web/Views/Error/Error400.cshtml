@model string
@{
    ViewBag.Title = "Bad request - Error 400";
}

<div class="hgroup">
    <h1 class="heading-xlarge">
        @if (string.IsNullOrEmpty(Model))
        {
            @Html.Raw("Bad request")
            ;
        }
        else
        {
            @Model
        }
    </h1>
</div>
<div class="inner">
    <p>If you entered a web address please check it was correct.</p>
    <p>
        You can return to the
        <a href="/">start page</a>
        to try again.
    </p>
</div>